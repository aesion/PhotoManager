<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/part_linear"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="10dp"
              android:paddingEnd="24dp"
              android:paddingStart="24dp"
              android:paddingTop="32dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/about_1"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="很高兴遇见你"
            android:textColor="?attr/colorPrimary"
            android:textSize="15sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="4dp"
            android:background="@color/line_cc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:lineSpacingExtra="3dp"
            android:text="@string/aboutContent"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="12dp"
            android:background="@color/line_cc"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/about_2"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="一切都很值得"
            android:textColor="?attr/colorPrimary"
            android:textSize="15sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="4dp"
            android:background="@color/line_cc"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:columnCount="2"
            >
<!--隐藏-->
            <Button
                android:visibility="gone"
                android:id="@+id/bt_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableLeft="@drawable/code"
                android:drawablePadding="12dp"
                android:gravity="start|center_vertical"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"

                android:text="查看项目源码"
                android:textColor="@color/defaultTextColor"
                tools:targetApi="lollipop"/>

            <Button
                android:visibility="gone"
                android:id="@+id/bt_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawablePadding="12dp"
                android:drawableLeft="@drawable/pay"
                android:gravity="start|center_vertical"
                android:paddingEnd="12dp"
                android:text="随意捐赠支持"
                android:paddingStart="12dp"
                android:textColor="@color/defaultTextColor"
                tools:targetApi="lollipop"/>

            <Button
                android:id="@+id/bt_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableLeft="@drawable/home"
                android:drawablePadding="12dp"
                android:gravity="start|center_vertical"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:text="查看公司主页"
                android:textColor="@color/defaultTextColor"
                tools:targetApi="lollipop"/>

            <Button

                android:id="@+id/bt_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableLeft="@drawable/share"
                android:drawablePadding="12dp"
                android:gravity="start|center_vertical"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:text="分享至朋友圈"
                android:textColor="@color/defaultTextColor"
                tools:targetApi="lollipop"/>

            <Button
                android:id="@+id/bt_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableLeft="@drawable/update"
                android:drawablePadding="12dp"
                android:gravity="start|center_vertical"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:text="检查软件更新"
                android:textColor="@color/defaultTextColor"
                tools:targetApi="lollipop"/>

            <Button
                android:id="@+id/bt_bug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableLeft="@drawable/bug"
                android:drawablePadding="12dp"
                android:gravity="start|center_vertical"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:text="意见错误反馈"
                android:textColor="@color/defaultTextColor"
                tools:targetApi="lollipop"/>

        </GridLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="12dp"
            android:background="@color/line_cc"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="@string/copyright_info"
        android:textColor="@color/black_alpha_36"
        android:textSize="10sp"
        />

</LinearLayout>