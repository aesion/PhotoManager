<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/home_tab"
              android:orientation="vertical"
              android:fitsSystemWindows="true"
              android:padding="10dp"

    >

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:orientation="horizontal"
                  android:padding="8dp"
        >

        <com.pulamsi.photomanager.widght.fitsystemwindowlayout.HomeButtonViewRelativelayout
            android:id="@+id/rl_hot_recommend"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@mipmap/home_news_bg"
            >

            <LinearLayout android:layout_width="70dp" android:layout_height="wrap_content"
                          android:layout_centerInParent="true"
                          android:orientation="vertical"
                >
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:src="@mipmap/home_news_icon"
                    />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:gravity="center"
                          android:text="NEWS\n最新动态"
                          android:textColor="@color/white"
                    />

            </LinearLayout>


        </com.pulamsi.photomanager.widght.fitsystemwindowlayout.HomeButtonViewRelativelayout>

        <com.pulamsi.photomanager.widght.fitsystemwindowlayout.HomeButtonViewRelativelayout
            android:id="@+id/rl_find"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@mipmap/home_find_bg"
            >

            <LinearLayout android:layout_width="70dp" android:layout_height="wrap_content"
                          android:layout_centerInParent="true"
                          android:orientation="vertical"
                >
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:src="@mipmap/home_find_icon"
                    />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:gravity="center"
                          android:text="FIND\n发 现"
                          android:textColor="@color/white"
                    />

            </LinearLayout>


        </com.pulamsi.photomanager.widght.fitsystemwindowlayout.HomeButtonViewRelativelayout>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:orientation="horizontal"
                  android:padding="8dp"
        >

        <com.pulamsi.photomanager.widght.fitsystemwindowlayout.HomeButtonViewRelativelayout
            android:id="@+id/rl_my_store"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@mipmap/home_store_bg"
            >

            <LinearLayout android:layout_width="70dp" android:layout_height="wrap_content"
                          android:layout_centerInParent="true"
                          android:orientation="vertical"
                >
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:src="@mipmap/home_store_icon"
                    />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:gravity="center"
                          android:text="MY STORE\n我的微商"
                          android:textColor="@color/white"
                    />

            </LinearLayout>

        </com.pulamsi.photomanager.widght.fitsystemwindowlayout.HomeButtonViewRelativelayout>

        <com.pulamsi.photomanager.widght.fitsystemwindowlayout.HomeButtonViewRelativelayout
            android:id="@+id/rl_trading"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@mipmap/home_exchange_bg"
            >

            <LinearLayout android:layout_width="70dp" android:layout_height="wrap_content"
                          android:layout_centerInParent="true"
                          android:orientation="vertical"
                >
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:src="@mipmap/home_exchange_icon"
                    />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:gravity="center"
                          android:text="TRADING\n微商换货"
                          android:textColor="@color/white"
                    />

            </LinearLayout>


        </com.pulamsi.photomanager.widght.fitsystemwindowlayout.HomeButtonViewRelativelayout>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:orientation="horizontal"
                  android:padding="8dp"
        >

        <com.pulamsi.photomanager.widght.fitsystemwindowlayout.HomeButtonViewRelativelayout
            android:id="@+id/rl_raise"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@mipmap/home_crowd_bg"
            >

            <LinearLayout android:layout_width="70dp" android:layout_height="wrap_content"
                          android:layout_centerInParent="true"
                          android:orientation="vertical"
                >
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:src="@mipmap/home_crowd_icon"
                    />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:gravity="center"
                          android:text="RAISE\n项目众筹"
                          android:textColor="@color/white"
                    />

            </LinearLayout>

        </com.pulamsi.photomanager.widght.fitsystemwindowlayout.HomeButtonViewRelativelayout>

        <com.pulamsi.photomanager.widght.fitsystemwindowlayout.HomeButtonViewRelativelayout
            android:id="@+id/rl_share"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@mipmap/home_share_bg"
            >
            <LinearLayout android:layout_width="70dp" android:layout_height="wrap_content"
                          android:layout_centerInParent="true"
                          android:orientation="vertical"
                >
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:src="@mipmap/home_tool_icon"
                    />
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:gravity="center"
                          android:text="TOOLS\n工 具"
                          android:textColor="@color/white"
                    />

            </LinearLayout>

        </com.pulamsi.photomanager.widght.fitsystemwindowlayout.HomeButtonViewRelativelayout>

    </LinearLayout>

</LinearLayout>