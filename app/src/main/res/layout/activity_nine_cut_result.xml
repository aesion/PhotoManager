<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

<LinearLayout  android:layout_width="match_parent"
               android:layout_height="0dp"
               android:gravity="center"
               android:orientation="vertical"
               android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_nine_cut_success"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:textSize="16sp"
                  android:text="已保存至相册"/>
    </LinearLayout>


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:layout_marginTop="15dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_back_home"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="返回首页"
            android:gravity="center"
            android:background="@drawable/ic_mask_sing_choose_bg_2dp"
            android:textSize="15sp"
            android:textColor="@color/red_500"
            />

    </LinearLayout>


</LinearLayout>
    <LinearLayout  android:layout_width="match_parent"
                   android:layout_height="150dp"
                   android:orientation="vertical"
                   >
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:paddingLeft="30dp"
                      android:paddingRight="30dp"
            >
        <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="0.1dp"
            android:background="@color/line_cc"
            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="分享"
                      android:paddingLeft="10dp"
                      android:paddingRight="10dp"
                />
            <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="0.1dp"
                  android:background="@color/line_cc"
                />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:orientation="vertical">
            <ImageView android:layout_width="50dp" android:layout_height="50dp"
                       android:layout_marginBottom="4dp"
                       android:src="@mipmap/ic_nine_cut_wechat"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="朋友圈"
                />
        </LinearLayout>
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="注:九张图片可以一键分享到朋友圈"
            android:textColor="@color/shallow_font"
            android:textSize="10sp"
            android:layout_marginTop="10dp"
            />


    </LinearLayout>

</LinearLayout>