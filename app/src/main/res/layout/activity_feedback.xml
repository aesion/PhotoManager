<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="10dp"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="反馈内容:"
        android:textSize="15sp"
        android:layout_margin="5dp"
        />

    <EditText
        android:id="@+id/et_feed_back_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="left|top"
        android:padding="8dp"
        android:hint="请输入您的反馈或建议"
        android:textSize="15sp"
        android:background="@drawable/et_comment_bg_5dp"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请留下联系方式方便我们与您取得联系"
        android:textSize="15sp"
        android:layout_margin="5dp"
        />

    <EditText
        android:id="@+id/et_feed_back_contact"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="8dp"
        android:inputType="number"
        android:hint="联系方式(邮箱/QQ/手机)"
        android:textSize="15sp"
        android:background="@drawable/et_comment_bg_5dp"
        />

    <Button
        android:id="@+id/bt_commit"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:background="@drawable/selector_btn_red"
        android:text="提交"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微博 @Pulamsi普兰氏"
            android:textSize="10sp"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:layout_height="wrap_content"
            android:text="官方Q群 608678905"
            />



    </LinearLayout>

</LinearLayout>