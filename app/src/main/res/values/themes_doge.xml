<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">


    <style name="Theme.Life.Doge.Default" parent="Theme.Life.Light.Default">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary_doge</item>
        <item name="android:colorPrimary" tools:ignore="NewApi">@color/colorPrimary_doge</item>
        <item name="android:colorAccent" tools:ignore="NewApi">@color/colorAccent_doge</item>
        <item name="colorAccent" tools:ignore="NewApi">@color/colorAccent_doge</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark_doge</item>
        <item name="android:colorPrimaryDark" tools:ignore="NewApi">@color/colorPrimaryDark_doge</item>
        <item name="android:textColorLink">@color/textColorLink_doge</item>
        <item name="itemForeground">@drawable/item_foreground_holo_doge</item>
        <!--TextColor tint -->
        <item name="item_selected_color">@color/item_selected_color_doge</item>
        <item name="item_selected_deep_color">@color/item_selected_deep_color_doge</item>
        <item name="textColorDark">@color/text_color_dark_doge</item>
        <item name="tabIndicatorColor">@color/white_alpha_100</item>
    </style>

    <style name="Theme.Life.Doge.NoActionBar" parent="Theme.Life.Doge.Default">
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>