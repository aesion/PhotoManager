<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Life.Kumamon.NoActionBar" parent="Theme.Life.Kumamon.Default">
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="Theme.Life.Kumamon.Default" parent="Theme.Life.Light.Default">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary_kumamon</item>
        <item name="android:colorPrimary" tools:ignore="NewApi">@color/colorPrimary_kumamon</item>
        <item name="android:colorAccent" tools:ignore="NewApi">@color/colorAccent_kumamon</item>
        <item name="colorAccent" tools:ignore="NewApi">@color/colorAccent_kumamon</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark_kumamon</item>
        <item name="android:colorPrimaryDark" tools:ignore="NewApi">@color/colorPrimaryDark_kumamon</item>
        <item name="android:textColorLink">@color/textColorLink_kumamon</item>
        <item name="itemForeground">@drawable/item_foreground_holo_kumamon</item>
        <!--TextColor tint -->
        <item name="item_selected_color">@color/item_selected_color_kumamon</item>
        <item name="item_selected_deep_color">@color/item_selected_deep_color_kumamon</item>
        <item name="textColorDark">@color/text_color_dark_kumamon</item>
        <item name="tabIndicatorColor">@color/white_alpha_100</item>
    </style>


</resources>